# CLI Tools
alias cat='batcat --theme="Dracula"'
alias cls='clear'
alias ls='eza --color=always --long --git --no-filesize --icons=always --no-time --no-user --no-permissions'
alias glow='glow -p'
alias lg='lazygit'
alias ld='lazydocker'
alias tree='eza --color=always --long --git --no-filesize --icons=always --no-time --no-user --no-permissions --tree'
alias weather='curl wttr.in'

# Languages
alias py='/home/tarcisio/.asdf/shims/python3'

# Net Tools
alias ipconfig='ifconfig'

# ZSH
alias edit-zsh="nvim ~/.zshrc"
alias reload-zsh="source ~/.zshrc"

# I3
alias show_nvim_keybinds="glow ~/.config/nvim/key_commands.md"
alias show_i3_keybinds="glow ~/Development/Linux_Mint/README.md"

# Android Studio
alias launch_avd="~/Android/Sdk/emulator/emulator -avd Pixel -gpu host > /dev/null &"
alias show_aliases='batcat --theme="Dracula" --language zsh $HOME/.zsh_aliases'

# Docker
alias dps='docker ps -a --format "table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.Ports}}"'
